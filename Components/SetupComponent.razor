<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="@ImgURL" class="card-img" alt="brand logo">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Name</h5>
        <h6 class="card-subtitle mb-2 text-muted"><b>Car:</b> @CarName</h6>
        <h6 class="card-subtitle mb-2 text-muted"><b>Track:</b> @TrackName</h6>
        <h6 class="card-subtitle mb-2 text-muted"><b>Lap time:</b> @LapTime.ToString()</h6>
        <a href="#" class="card-link">Details</a>
        <a href="#" class="card-link">Compile & download</a>
      </div>
    </div>
  </div>
</div>

@code
{
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string CarName { get; set; }
    [Parameter]
    public string TrackName { get; set; }
    [Parameter]
    public string ImgURL { get; set; }
    [Parameter]
    public TimeSpan LapTime { get; set; }
}