@inject NavigationManager NavigationManager
@using System.Globalization

<div class="card bg-light mb-3">
  <div class="card-body text-center">
    <h5 class="card-title">@CarName</h5>
    <h6 class="card-subtitle mb-2">@TrackName</h6>
    <h6 class="card-subtitle mb-2 text-muted">"@Name"</h6>
    <h6 class="card-subtitle mb-2 text-muted">@Date.ToString("dddd dd MMMM yyyy",CultureInfo.CreateSpecificCulture("en-US"))</h6>
    <button type="button" class="btn btn-info" @onclick="@(()=>{NavigationManager.NavigateTo($"setup/{Id.ToString()}");})">Details</button>
  </div>
</div>

@code
{
    [Parameter]
    public Guid Id { get; set; }
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string CarName { get; set; }
    [Parameter]
    public string TrackName { get; set; }
    [Parameter]
    public string ImgURL { get; set; }
    [Parameter]
    public DateTime Date { get; set; }
    [Parameter]
    public EventCallback OnClickDeleteButton { get; set; }
}